<div class= "container"> 
       
        <div class="row">  
                <div class= "col s12">
                   <a 
                   class="waves-effect waves-light btn-small"
                   href="/">Go Back</a>
                </div>
        </div> 

   
        <div class="row"> 
          <h3> Update Movie </h3> 
           
            <form class="col s12" method = "POST" action="/movies/{{movie.id}}?_method=PUT"> 
            <div class="row">            
                <div class="input-field col s12">
                <input 
                  placeholder="Title"  
                  name = "title"  
                  id="title" 
                  type="text" 
                  class="validate"
                  required = ""
                  aria-required="true"
                  value = "{{ movie.title }}">
                <label for="title">Title</label>
                </div>

                <div class="input-field col s12">
                   <textarea 
                   name = "description" 
                   id = "description"
                   class = "materialize-textarea validate"
                   placeholder = "Description"
                   style = "height: 100px;"
                   required = ""
                   aria-required="true"
                   >{{ movie.description }}</textarea>
                    <label for="Description">Description</label>
                </div>
            </div> 
             
            <div class="row">  
               <button 
                 class= "btn waves-effect waves-light"
                 type = "submit"
                 name = "action" 
                 >
                 Submit
               </button> 
            </div> 


            </form>
        </div>
  </div>